{
    "name": "noellabo/oauth2-mastodon",
    "description": "Mastodon OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Takeshi Umeda",
            "email": "noel.yoshiba@gmail.com",
            "homepage": "https://github.com/noellabo"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "mastodon"
    ],
    "require": {
        "league/oauth2-client": "^2.3",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9",
        "squizlabs/php_codesniffer": "~2.0",
        "jakub-onderka/php-parallel-lint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Noellabo\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Noellabo\\OAuth2\\Client\\Test\\": "test/src/"
        }
    }
}
